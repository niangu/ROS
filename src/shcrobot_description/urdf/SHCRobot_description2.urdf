<?xml version="1.0"?>  
<!--前轮转向，后轮驱动(阿克曼转向)-->
<robot name="SHCRobot">  
  <link name="base_link">  
    <visual>  
      <geometry>  
        <box size="1.3 .8 .2"/>  
    </geometry>  
    <origin rpy="0 0 1.57075" xyz="0 0 0"/>
    <material name="blue">  
        <color rgba="0 0 .8 1"/>  
    </material>  
    </visual>  
  </link>

  <link name="right_front_wheel">  
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>


  <joint name="right_front_steer_joint" type="revolute">  
    <axis xyz="1 0 0"/>  
    <parent link="base_link"/>  
    <child link="right_front_wheel"/>  
    <origin rpy="0 1.57075 0" xyz="0.4 0.375 -0.055"/>  
    <limit effort ="1000.0" lower="-1" upper="1" velocity="0.5"/>
    <joint_properties damping="0.0" friction="0.0"/>  
  </joint> 



  <link name="left_front_wheel">  
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>


  <joint name="left_front_steer_joint" type="revolute">  
    <axis xyz="1 0 0"/>  
    <parent link="base_link"/>  
    <child link="left_front_wheel"/>  
    <origin rpy="0 1.57075 0" xyz="-0.4 0.375 -0.055"/>  
    <limit effort ="1000.0" lower="-1" upper="1" velocity="0.5"/>
    <joint_properties damping="0.0" friction="0.0"/>  
  </joint>

  <link name="right_rear_wheel">  
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>


  <joint name="right_rear_wheel_joint" type="continuous">  
    <axis xyz="0 0 1"/>  
    <parent link="base_link"/>  
    <child link="right_rear_wheel"/>  
    <origin rpy="0 1.57075 0" xyz="0.4 -0.375 -0.055"/>  
    <limit effort="100" velocity="100"/>  
    <joint_properties damping="0.0" friction="0.0"/>  
  </joint>  

  <link name="left_rear_wheel">  
    <visual>  
      <geometry>  
        <cylinder length=".08" radius="0.15"/>  
      </geometry>  
      <material name="black">  
        <color rgba="0 0 0 1"/>  
      </material>  
    </visual>  
  </link>


  <joint name="left_rear_wheel_joint" type="continuous">  
    <axis xyz="0 0 1"/>  
    <parent link="base_link"/>  
    <child link="left_rear_wheel"/>  
    <origin rpy="0 1.57075 0" xyz="-0.4 -0.375 -0.055"/>  
    <limit effort="100" velocity="100"/>  
    <joint_properties damping="0.0" friction="0.0"/>  
  </joint> 

  <link name="head">  
    <visual>  
      <geometry>  
        <box size=".12 .13 .04"/>  
      </geometry>  
      <material name="white">  
          <color rgba="1 1 1 1"/>  
      </material>  
    </visual>  
  </link>  
  
  <joint name="tobox" type="fixed">  
    <parent link="base_link"/>  
    <child link="head"/>  
    <origin xyz="0 0.3 0.1"/>  
  </joint> 
</robot> 

